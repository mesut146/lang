FROM debian:sid AS build

ARG version
ARG host_tool="./x-toolchain-1.00-x86_64"
ARG target_tool="./x-toolchain-1.00-aarch64"


ARG DEBIAN_FRONTEND=noninteractive

COPY . /home/lang

RUN uname -m
WORKDIR /home/lang
RUN rm -rf ./build
RUN ./bin/cross.sh $host_tool ${target_tool} ${version}>>log.txt
