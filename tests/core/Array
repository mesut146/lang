class Array<T>{
  ptr: T*;
  length: int;

  static func copy<T>(arr: T[]){
    let res: T[arr.length];
    copy(arr, 0, res, 0, arr.length);
    return res;
  }

  static func copy<T>(src: T[], srcOff: int, trg: T[], trgOff: int, count: int){
    for(let i = 0;i < count;i++){
      trg[trgOff + i] = src[srcOff + i];
    }
  }

  static func max<T>(arr: T[]){
    let res = int.MAX;
    for(let x : arr) res = int.max(res, x);
    return res;
  }

}